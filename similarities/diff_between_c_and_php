#include <stdio.h>

// Function declaration
void greet(char* name) {
    printf("Hello, %s!\n", name);
}

int main() {
    // Variables
    int age = 25;
    char* myName = "Alice";

    // Condition
    if (age >= 18) {
        // Function call
        greet(myName);
    } else {
        printf("You are too young to be greeted!\n");
    }

    // Loop
    for (int i = 0; i < 5; ++i) {
        // Code block
        printf("Iteration %d\n", i + 1);
    }

    return 0;
}

<?php

// Function definition
function greet($name) {
    echo "Hello, $name!\n";
}

// Main code
$age = 25;
$myName = "Alice";

// Condition
if ($age >= 18) {
    // Function call
    greet($myName);
} else {
    echo "You are too young to be greeted!\n";
}

// Loop
for ($i = 0; $i < 5; ++$i) {
    // Code block
    echo "Iteration " . ($i + 1) . "\n";
}

?>

